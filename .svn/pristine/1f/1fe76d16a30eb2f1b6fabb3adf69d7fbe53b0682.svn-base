package com.wcs.tih.filenet.helper.ce.util;

public class CeQueryUtils {
	public static void appendGetReleasedDocument(boolean isAnd, String query) {
		if ((query != null) && (!(query.trim().equals("")))) {
			if (isAnd)
				query = query + " AND ";
			else
				query = query + " OR ";
		}
		query = query + "to do";
	}

	public static void appendGetCurrentDocument(boolean isAnd, String query) {
		if ((query != null) && (!(query.trim().equals("")))) {
			if (isAnd)
				query = query + " AND ";
			else
				query = query + " OR ";
		}
		query = query + "to do";
	}
}